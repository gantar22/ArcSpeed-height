}


public void spawn(){
textDir = "/home/gantar/Documents/maven/mygame/src/main/TexturePack/samus.png";
spriteBox = new Rectangle(250,1,25,45);
hitBox = new Rectangle(100,100,25,45);
}

public Texture getTexture(){
	System.out.println(textDir + ">>><<<<");	
	try{
	return TextureLoader.getTexture("PNG", ResourceLoader.getResourceAsStream(textDir));
	}catch(IOException e){
		e.printStackTrace();
		return texture;
	}
}
public Rectangle getSpriteBox(){
	return spriteBox;
}
public Point getPos(){
	return new Point((int)hitBox.getX(),(int)hitBox.getY());
}
}
